pipeline {
    agent any

    environment {
        NETLIFY_SITE_ID = 'f0e4fb7a-bdec-4790-ac61-200c3807d7d9'
        NETLIFY_AUTH_TOKEN = credentials ('netlify_token')
    }

    stages {
        
        stage('Build') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                  sh ''' 
                    
                     node --version
                     npm --version
                     export HOME=/tmp
                     npm config set cache /tmp/.npm
                     npm ci
                     npm run build
                     ls -la
                  '''
            }
        }
        
        stage('tests') {
            parallel {
                stage('unit test') {
                    agent {
                        docker {
                            image 'node:18-alpine'
                            reuseNode true
                        }
                    }
                    steps {
                        sh ''' 
                            echo "test"
                            test -f build/index.html
                            npm test
                        '''
                    }
                }


                stage('E2E') {
                    agent {
                        docker {
                            image 'mcr.microsoft.com/playwright:v1.57.0-noble'
                            reuseNode true
                            }
                    }
                    steps {
                        sh ''' 
                           npx serve -s build &
                           sleep 10
                           npx playwright test --reporter=html
                        '''
                        }
                            
                } 
                
            }

        } 
        stage('deploy') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                    
                }
            }
            steps {
                  sh ''' 
                     export HOME=/tmp
                     npm config set cache /tmp/.npm
                     
                     npm install netlify-cli@20.1.1
                     export PATH=$PWD/node_modules/.bin:$PATH
                     netlify --version
                     netlify status
                     echo " deploying to prod - Site ID = $NETLIFY_SITE_ID"
                     netlify deploy --dir=build --prod --build=false 

                  '''
            }
        }

    }
 
    
    post {
        always {
            junit 'jest-results/junit.xml'
        }
    } 
}