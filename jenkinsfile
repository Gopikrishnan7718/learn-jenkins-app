pipeline {
    agent any

    stages {
        
        stage('Build') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                  sh ''' 
                     node --version
                     npm --version
                     npm ci
                     npm run build
                     ls -la
                  '''
            }
        }
        
        stage('tests') {
            parallel {
                stage('unit test') {
                    agent {
                        docker {
                            image 'node:18-alpine'
                            reuseNode true
                        }
                    }
                    steps {
                        sh ''' 
                            echo "test"
                            test -f build/index.html
                            npm test
                        '''
                    }
                }


                stage('E2E') {
                    agent {
                        docker {
                            image 'mcr.microsoft.com/playwright:v1.57.0-noble'
                            reuseNode true
                            }
                    }
                    steps {
                        sh ''' 
                           npx serve -s build &
                           sleep 10
                           npx playwright test --reporter=html
                        '''
                        }
                            
                } 
                
            }

        } 
        stage('deploy') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                    
                }
            }
            steps {
                  sh ''' 
                     export HOME=/tmp
                     npm config set cache /tmp/.npm
                     cd /tmp
                     npm install netlify-cli
                     export PATH=/tmp/node_modules/.bin:$PATH
                     netlify --version

                  '''
            }
        }

    }
 
    
    post {
        always {
            junit 'jest-results/junit.xml'
        }
    } 
}