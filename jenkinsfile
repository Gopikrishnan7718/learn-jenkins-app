pipeline {
    agent any

    stages {
        stage('Build') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                  sh ''' 
                     export HOME=/tmp
                     npm config set cache /tmp/.npm
                     ls -la
                     node --version
                     npm --version
                     npm ci
                     npm run build
                     ls -la
                  '''
            }
        }        
        stage {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                   sh ''' 
                     export HOME=/tmp
                     npm config set cache /tmp/.npm
                     ls -la
                     node --version
                     npm --version
                     npm ci
                     npm run test
                     ls -la
                   '''
            }
        }           
    }
}